" COMMON

set nocompatible
" Numbers
set number 
set relativenumber 

" Syntax
syntax on
set background="dark"

" Indentation
set autoindent 
set smartindent

" Tabs
set tabstop=4
set smarttab
set noexpandtab
set softtabstop=4
set shiftwidth=4


" Backup
set nobackup
set nowritebackup
set backupcopy=no

" Bell
set belloff="all"

" Search
set hlsearch
set incsearch
set ignorecase
set smartcase

" Ruler
set ruler
" set rulerformat

" Paste
set paste
"set pastetoggle

set fsync
set autoread 
set autowrite 
set autowriteall 

set smoothscroll
set wrap
set splitright
set startofline
set noswapfile
set showtabline=2
set novisualbell
colorscheme nord
